# Exemple .env pour Ayanna ERP
# Copiez ce fichier en `.env` et remplissez les valeurs sensibles avant de lancer l'application

# Base de données
DATABASE_URL=sqlite:///ayanna_erp.db

# Application
APP_NAME=Ayanna ERP
APP_VERSION=1.0.0
DEBUG=True

# Modules activés (séparez par des virgules)
MODULES_ENABLED=SalleFete,Boutique,Pharmacie,Restaurant,Hotel,Achats,Stock,Comptabilite

# Secret utilisé pour signer/valider les licences (HMAC-SHA256)
# Ne partagez pas cette clef. Exemple (remplacer par une valeur générée):
LICENCE_SECRET=change_me_with_a_strong_random_value
